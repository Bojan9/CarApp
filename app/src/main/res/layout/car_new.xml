<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        app:srcCompat="@drawable/bg_new_car"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/colorBtn"
        android:background="@drawable/roundcorner"
        android:text="âœ“"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="340dp"
        android:onClick="save"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/colorBtn"
        android:background="@drawable/roundcorner"
        android:text="back"
        android:textSize="12dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="back"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add vehicle"
        android:textColor="@color/colorAccent"
        android:textSize="40dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:src="@color/colorBtn"
        android:background="@drawable/roundcorner"
        android:padding="8dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="340dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorBtn"
                    android:ems="100"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorDark"
                    android:textColorHint="@color/colorDark" />

                <EditText
                    android:id="@+id/editTextDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorBtn"
                    android:ems="100"
                    android:hint="Description"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorDark"
                    android:textColorHint="@color/colorDark" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Units"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Distance unit"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/buttonDistance"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_btn_down"
                        android:text="Kilometers"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewFuel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Fuel unit"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/buttonFuel"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_btn_down"
                        android:text="Liters"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewConsumption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:text="Consumption"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/buttonConsumption"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_btn_down"
                        android:text="l/100km"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewGasType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Gas type"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewGasType1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"/>

                    <Button
                        android:id="@+id/btnGasType1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="Not set"
                        android:drawableRight="@drawable/ic_btn_down"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewGasType2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnGasType2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="Not set"
                        android:drawableRight="@drawable/ic_btn_down"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switchGasType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bi-fuel vehicle (2 tanks)"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTankCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Tank capacity (Optional)"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/editText11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:backgroundTint="@color/colorBtn"
                        android:hint="Not set (l)"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/editText12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:backgroundTint="@color/colorBtn"
                        android:hint="Not set (l)"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOptional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Optional"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorBtn"
                        android:ems="10"
                        android:hint="Make"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark" />

                    <EditText
                        android:id="@+id/editText14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorBtn"
                        android:ems="10"
                        android:hint="Model"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorBtn"
                        android:ems="10"
                        android:hint="Year"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark" />

                    <EditText
                        android:id="@+id/editText16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorBtn"
                        android:ems="10"
                        android:hint="License plate"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editText17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/colorBtn"
                        android:ems="10"
                        android:hint="VIN"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark" />

                    <EditText
                        android:id="@+id/editText18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/colorBtn"
                        android:ems="10"
                        android:hint="Insurance Policy"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnDel"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@color/colorBtn"
                    android:background="@drawable/roundcorner"
                    android:text="delete"
                    android:textSize="12dp"
                    android:padding="8dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="delete"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>
</ScrollView>